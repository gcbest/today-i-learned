{
  "name": "today-i-learned",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:test": "export NODE_ENV=\"test\" && next build",
    "dev": "next dev",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "start": "next start",
    "start:test": "export NODE_ENV=\"test\" && next start",
    "test": "vitest",
    "test:cypress:open": "env-cmd -f .env.test.local cypress open",
    "test:cypress:start": "start-server-and-test 'npm run start:test' 3000 'npm run cypress:open'",
    "test:cypress:build": "npm run build:test && npm run cypress:start",
    "test:cypress:run": "start-server-and-test 'npm run start:test' 3000 'env-cmd -f .env.test.local cypress run'",
    "test:cypress:run:ci": "start-server-and-test 'npm run start:test' 3000 'cypress run'",
    "test:db:migrate": "pnpx prisma migrate reset --env-file .env.test.local --force --skip-generate --skip-seed",
    "test:db:migrate:ci": "pnpx prisma migrate reset --force --skip-generate --skip-seed",
    "test:integration": "vitest __tests__/integration",
    "test:unit": "vitest __tests__/unit --changed HEAD~1",
    "test:unit:no-watch": "vitest run __tests__/unit --changed HEAD~1"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.3",
    "@prisma/client": "^4.0.0",
    "@trpc/client": "^9.25.3",
    "@trpc/next": "^9.25.3",
    "@trpc/react": "^9.25.3",
    "@trpc/server": "^9.25.3",
    "next": "12.2.0",
    "next-auth": "^4.9.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.1",
    "superjson": "^1.9.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/react": "^13.3.0",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "cypress": "^10.4.0",
    "env-cmd": "^10.1.0",
    "eslint": "8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prisma": "^4.0.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.5",
    "typescript": "4.7.4",
    "vitest": "^0.17.1"
  }
}
